{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "C/C++: g++.exe build all files",
            "type": "shell",
            "command": "C:\\msys64\\ucrt64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-I",
                "C:\\dev\\lib\\eigen",
                "-g",
                "-std=c++20",
                "-mpclmul",
                "-msse2",
                "*.cpp",
                "-o",
                "${workspaceFolder}\\main.exe"
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Build all .cpp files in the workspace."
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file",
            "command": "C:\\msys64\\ucrt64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-I",
                "C:\\dev\\lib\\eigen",
                "-g",
                "-std=c++20",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "label": "C/C++: g++.exe build optimized program",
            "type": "shell",
            "command": "C:\\msys64\\ucrt64\\bin\\g++.exe",
            "args": [
                "-I",
                "C:\\dev\\lib\\eigen",
                "-O3",
                "-ffast-math",
                "-march=native",
                "-pthread",
                "-fopenmp",
                "-std=c++20",
                "*.cpp",
                "-o",
                "${workspaceFolder}\\optmain.exe"
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Build optimized program."
        },
        {
            "label": "C/C++: g++.exe build current file and dependencies",
            "type": "shell",
            "command": "C:\\msys64\\ucrt64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-I",
                "C:\\dev\\lib\\eigen",
                "-I",
                "C:\\dev\\lib\\boost",
                "-g",
                "-std=c++20",
                "-mpclmul",
                "-msse2",
                "${file}",
                "GF2N.cpp",
                "discrete_space.cpp",
                "displaced_Qfunc.cpp",
                "graph_generator.cpp",
                "-o",
                "${workspaceFolder}\\main.exe"
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Build current file and all dependencies in the workspace."
        }
    ]
}